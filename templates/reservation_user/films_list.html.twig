
{# templates/reservation_user/_films_list.html.twig #}
<div class="film-grid">
  {% for f in films %}
    {# f = { film: Film, seances: [] } #}
    {% set film = f.film %}

    <div class="film-horizontal-card">

      {# Poster (gère absolu/relatif) #}
      {% set raw = film.affiche ?? '' %}
      {% if raw starts with 'http' %}
        {% set poster = raw %}
      {% elseif raw starts with '/' %}
        {% set poster = raw %}
      {% elseif raw starts with 'uploads/' %}
        {% set poster = asset(raw) %}
      {% elseif raw %}
        {% set poster = asset('uploads/affiches/' ~ raw) %}
      {% else %}
        {% set poster = asset('images/placeholder.jpg') %}
      {% endif %}

      <div class="film-poster" style="position:relative">
      
        {# Badge coup de cœur #}
        {% if film.coupDeCoeur %}
          <div class="badge">
            Coup de cœur
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
            </svg>
          </div>
        {% endif %}

        <a href="{{ path('app_films_show', { id: film.id }) }}">
          <img src="{{ poster }}" alt="{{ film.titre }}">
        </a>
      </div>

      <div class="film-info">
        <h3>
          <a href="{{ path('app_films_show', { id: film.id }) }}" style="color:inherit;text-decoration:none">
            {{ film.titre }}
          </a>
        </h3>

        {# Âge + genre #}
        <p class="public">
          {% if film.ageMinimum is not null %}
            - {{ film.ageMinimum }} ans
          {% else %}
            Tout public
          {% endif %}
          {% if film.genre %}
            | {{ film.genre.nom }}
          {% endif %}
        </p>

        {% if film.synopsis %}
          <p class="desc">{{ film.synopsis }}</p>
        {% endif %}

        {# Séances #}
        {% if f.seances is not empty %}
          <div class="sessions-grid">
            {% for s in f.seances %}
              {# Heure: tente s.heure, sinon s.date #}
              {% set heure =
                s.heure is defined and s.heure
                  ? s.heure
                  : (s.date is defined and s.date ? s.date|date('H:i') : null)
              %}

              {# Fin: gère string ou DateTime #}
              {% set fin =
                s.fin is defined and s.fin
                  ? (s.fin is iterable or s.fin is same as(false) ? s.fin : (s.fin is date ? s.fin|date('H:i') : s.fin))
                  : null
              %}

              <a class="session-chip" href="{{ path('app_reservation_new', { seanceId: s.id }) }}">
                <div class="chip-top">
                  {% if s.format %}<span class="chip-version">{{ s.format|lower }}</span>{% endif %}
                </div>
                

                <div class="chip-time">{{ heure ?? '—:—' }}</div>

                <div class="chip-end">
                  {% if fin %}
                    fin à {{ fin }}
                  {% elseif s.places is defined %}
                    {{ s.places }} place{% if s.places > 1 %}s{% endif %} restantes
                  {% endif %}
                </div>

                <div class="chip-bottom">
                  <div class="chip-icons">
                    <span class="icon" aria-label="Accès fauteuil">
                      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                           viewBox="0 0 24 24" aria-hidden="true">
                        <circle cx="9" cy="4" r="2" fill="currentColor"/>
                        <path fill="currentColor" d="M16.98 14.804A1 1 0 0 0 16 14h-4.133l-.429-3H16V9h-4.847l-.163-1.142A1 1 0 0 0 10 7H9a1.003 1.003 0 0 0-.99 1.142l.877 6.142A2.01 2.01 0 0 0 10.867 16h4.313l.839 4.196c.094.467.504.804.981.804h3v-2h-2.181z"/>
                        <path fill="currentColor" d="M12.51 17.5c-.739 1.476-2.25 2.5-4.01 2.5A4.505 4.505 0 0 1 4 15.5a4.5 4.5 0 0 1 2.817-4.167l-.289-2.025C3.905 10.145 2 12.604 2 15.5C2 19.084 4.916 22 8.5 22a6.5 6.5 0 0 0 5.545-3.126l-.274-1.374z"/>
                      </svg>
                    </span>
                    <span class="icon" aria-label="Accessibilité visuelle">
                      <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32"
                           viewBox="0 0 32 32" aria-hidden="true">
                        <path fill="currentColor" d="m5.24 22.51l1.43-1.42A14.06 14.06 0 0 1 3.07 16C5.1 10.93 10.7 7 16 7a12.4 12.4 0 0 1 4 .72l1.55-1.56A14.7 14.7 0 0 0 16 5A16.69 16.69 0 0 0 1.06 15.66a1 1 0 0 0 0 .68a16 16 0 0 0 4.18 6.17"/>
                        <path fill="currentColor" d="M12 15.73a4 4 0 0 1 3.7-3.7l1.81-1.82a6 6 0 0 0-7.33 7.33zm18.94-.07a16.4 16.4 0 0 0-5.74-7.44L30 3.41L28.59 2L2 28.59L3.41 30l5.1-5.1A15.3 15.3 0 0 0 16 27a16.69 16.69 0 0 0 14.94-10.66a1 1 0 0 0 0-.68M20 16a4 4 0 0 1-6 3.44L19.44 14a4 4 0 0 1 .56 2m-4 9a13.05 13.05 0 0 1-6-1.58l2.54-2.54a6 6 0 0 0 8.35-8.35l2.87-2.87A14.54 14.54 0 0 1 28.93 16C26.9 21.07 21.3 25 16 25"/>
                      </svg>
                    </span>
                  </div>

                  {% if s.salle is defined and s.salle %}
                    <div class="chip-room">{{ s.salle.nom is defined ? s.salle.nom : s.salle }}</div>
                  {% endif %}
                </div>
              </a>
            {% endfor %}
          </div>
        {% else %}
          <p class="no-session">Aucune séance.</p>
        {% endif %}
      </div>
    </div>
  {% endfor %}
</div>
