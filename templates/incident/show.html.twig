{% extends 'base.html.twig' %}

{% block title %}Incident{% endblock %}

{% block body %}
    <h1>Incident</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ incident.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ incident.description }}</td>
            </tr>
            <tr>
                <th>DateSignalement</th>
                <td>{{ incident.dateSignalement ? incident.dateSignalement|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Resolu</th>
                <td>{{ incident.resolu ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ incident.createdAt ? incident.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_incident_index') }}">back to list</a>

    <a href="{{ path('app_incident_edit', {'id': incident.id}) }}">edit</a>

    {{ include('incident/_delete_form.html.twig') }}
{% endblock %}
