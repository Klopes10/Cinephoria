{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/auth.css') }}">
    <script src="{{ asset('js/auth.js') }}"></script>
{% endblock %}

{% block title %}Connexion / Inscription{% endblock %}

{% block body %}
<div class="auth-wrapper">
    <div class="auth-container">
        <div class="auth-tabs">
            <h1 id="tab-login" class="tab active">CONNEXION</h1>
            <h1 id="tab-register" class="tab">INSCRIPTION</h1>
        </div>

        {# Flashes optionnels #}
        {% for msg in app.flashes('success') %}
            <div class="toast toast-success">{{ msg }}</div>
        {% endfor %}
        {% for msg in app.flashes('error') %}
            <div class="toast toast-error">{{ msg }}</div>
        {% endfor %}

        <div class="auth-forms">
            {# ---------- Connexion ---------- #}
            <div id="login-form" class="auth-form-section">
                {% if login_error %}
                    <div class="error">Identifiants invalides</div>
                {% endif %}

                <form method="post" action="{{ path('app_auth') }}" class="auth-form" autocomplete="on">
                    <div class="form-group">
                        <label for="email">Email</label>
                        {# Doit correspondre à username_parameter: email #}
                        <input
                            type="email"
                            id="email"
                            name="email"
                            value="{{ last_username }}"
                            required
                            autocomplete="email"
                        >
                    </div>

                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                        {# Doit correspondre à password_parameter: password #}
                        <input
                            type="password"
                            id="password"
                            name="password"
                            required
                            autocomplete="current-password"
                        >
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button type="submit">Connexion</button>

                    <div class="forgot-password">
                        <a href="{{ path('app_forgot_password') }}">Mot de passe oublié</a>
                    </div>
                </form>
            </div>

            {# ---------- Inscription ---------- #}
            <div id="register-form" class="auth-form-section" style="display: none;">
                {{ form_start(registration_form, {
                    action: path('app_register'),
                    method: 'POST',
                    attr: { class: 'auth-form', autocomplete: 'on' }
                }) }}

                    <div class="form-row">
                        <div class="form-group">
                            {{ form_label(registration_form.forname) }}
                            {{ form_widget(registration_form.forname, { attr: { autocomplete: 'given-name' } }) }}
                            {{ form_errors(registration_form.forname) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(registration_form.name) }}
                            {{ form_widget(registration_form.name, { attr: { autocomplete: 'family-name' } }) }}
                            {{ form_errors(registration_form.name) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(registration_form.username) }}
                        {{ form_widget(registration_form.username, { attr: { autocomplete: 'username' } }) }}
                        {{ form_errors(registration_form.username) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(registration_form.email) }}
                        {{ form_widget(registration_form.email, { attr: { autocomplete: 'email' } }) }}
                        {{ form_errors(registration_form.email) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(registration_form.plainPassword.first) }}
                        {{ form_widget(registration_form.plainPassword.first, { attr: { autocomplete: 'new-password' } }) }}
                        {{ form_errors(registration_form.plainPassword.first) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(registration_form.plainPassword.second) }}
                        {{ form_widget(registration_form.plainPassword.second, { attr: { autocomplete: 'new-password' } }) }}
                        {{ form_errors(registration_form.plainPassword.second) }}
                    </div>

                    <button type="submit">Inscription</button>

                {{ form_end(registration_form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
