{% extends 'base.html.twig' %}

{% block title %}Film{% endblock %}

{% block body %}
    <h1>Film</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ film.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ film.titre }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ film.synopsis }}</td>
            </tr>
            <tr>
                <th>AgeMinimum</th>
                <td>{{ film.ageMinimum }}</td>
            </tr>
            <tr>
                <th>Affiche</th>
                <td>{{ film.affiche }}</td>
            </tr>
            <tr>
                <th>CoupDeCoeur</th>
                <td>{{ film.coupDeCoeur ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>NoteMoyenne</th>
                <td>{{ film.noteMoyenne }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ film.createdAt ? film.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_film_index') }}">back to list</a>

    <a href="{{ path('app_film_edit', {'id': film.id}) }}">edit</a>

    {{ include('film/_delete_form.html.twig') }}
{% endblock %}
