{% extends 'base.html.twig' %}

{% block title %}Seance index{% endblock %}

{% block body %}
    <h1>Seance index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateHeureDebut</th>
                <th>DateHeureFin</th>
                <th>Qualite</th>
                <th>PlacesDisponible</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for seance in seances %}
            <tr>
                <td>{{ seance.id }}</td>
                <td>{{ seance.dateHeureDebut ? seance.dateHeureDebut|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ seance.dateHeureFin ? seance.dateHeureFin|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ seance.qualite }}</td>
                <td>{{ seance.placesDisponible }}</td>
                <td>{{ seance.createdAt ? seance.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_seance_show', {'id': seance.id}) }}">show</a>
                    <a href="{{ path('app_seance_edit', {'id': seance.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_seance_new') }}">Create new</a>
{% endblock %}
